generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("storage_POSTGRES_PRISMA_URL")
}

model Product {
  id            String   @id @default(cuid())
  ref           String   @unique
  slug          String   @unique
  name          String
  dimensions    String
  mainCategory  String
  subCategory   String
  initialPrice  Float
  topDealsPrice Float
  mainImage     String
  gallery       String[]
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([mainCategory, subCategory])
  @@index([isActive])
}

model Category {
  id            String   @id @default(cuid())
  name          String   @unique
  subcategories String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
